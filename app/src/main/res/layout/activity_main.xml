<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.android.helloandroid.MainActivity">

    <TextView
        android:id="@+id/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingBottom="120dp"
        android:paddingTop="64dp"
        android:text="@string/udacity"
        android:textColor="#B3ffffff"
        android:textSize="@dimen/text_size_udacity"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-light"
        android:paddingRight="20dp"
        android:text="@string/address1"
        android:textColor="@color/mainfont"
        android:textSize="@dimen/text_size1" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        android:layout_below="@+id/address1"
        android:fontFamily="sans-serif-light"
        android:text="@string/address2"
        android:textColor="@color/mainfont"
        android:textSize="@dimen/text_size1"
        android:paddingEnd="20dp" />


    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/address2"
        android:fontFamily="sans-serif-light"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:text="@string/phone"
        android:textColor="@color/mainfont"
        android:textSize="@dimen/text_size1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitEnd"
        android:src="@drawable/udacity1" />

</RelativeLayout>

